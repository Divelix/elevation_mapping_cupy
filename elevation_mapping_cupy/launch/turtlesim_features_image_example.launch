<?xml version="1.0" encoding="utf-8"?>

<launch>

    <!-- Launch elevation mapping turtle sim. -->
    <include file="$(find elevation_mapping_cupy)/launch/turtlesim_init.launch">
        <arg name="rviz_config" value="$(find elevation_mapping_cupy)/rviz/turtle_features_example.rviz"/>
    </include>
    <node pkg="semantic_sensor" type="image_node.py" name="feat_front" args="feat_front"
          output="screen">
        <rosparam command="load" file="$(find elevation_mapping_cupy)/config/features_semantics.yaml"/>
    </node>

    <node pkg="elevation_mapping_cupy" type="elevation_mapping_node" name="elevation_mapping" output="screen">
        <rosparam command="load" file="$(find elevation_mapping_cupy)/config/features_parameters.yaml"/>
        <rosparam command="load" file="$(find elevation_mapping_cupy)/config/features_sensor_parameter.yaml"/>
    </node>
</launch>
